#!/usr/bin/env bash

#
# navigation
#
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

#
# navigational shortcuts
#
alias g="cd \$HOME/golang"
alias p="cd \$HOME/box/code/puppet"
alias d="cd \$HOME/box/code/docker"
alias v="cd \$HOME/box/code/vagrant"

# hub > git
#alias git="hub "

# mutli-os colorized ls
alias la="ls -laph --color=auto"
alias ll="ls -lph --color=auto"
alias lsd="ls -lph --color=auto | grep '^d'"

# Enable aliases to be sudoâ€™ed
alias sudo="sudo "

# vagrant status
alias vstat="vagrant global-status"

# untar (.tar || .tar.gz)
alias untar="tar xvf"
alias untarz="tar zxvf"
