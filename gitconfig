#
# git: aliases
#
[alias]
up      = sync
stat    = status -s
contrib = shortlog --summary --numbered
ll      = log --pretty=oneline --number 10 --graph --abbrev-commit
lg      = log --color --decorate --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an (%G?)>%Creset' --abbrev-commit --number 10

#
# git: core configs
#
[core]
editor  = vim

[diff]
renames = copies

[push]
default = matching

[http]
cookiefile = ~/.gitcookies

#
# git: user settings
#
[user]
name  = Nicholas Anderson
email = nicholas.anderson@nike.com

[github]
user  = iamnande

[credential]
helper = cache --timeout 3600
helper = store --file ~/.gitcreds

#
# git: colors
#
[color "diff"]
old  = red
new  = green
meta = yellow bold
frag = magenta bold

[color "branch"]
remote  = green
local   = yellow
current = yellow reverse

[color "status"]
untracked = cyan
changed   = green
added     = yellow
